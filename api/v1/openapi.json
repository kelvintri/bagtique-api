{
  "openapi": "3.0.0",
  "info": {
    "title": "Bagtique API",
    "version": "1.0.0",
    "description": "API documentation for Bagtique e-commerce platform"
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "API V1"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login"
          }
        }
      }
    }
  }
}